<%= form_for(item, remote: true) do |f|%>
<div class="modal fade" id="myupdateitem_<%=item.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">

        <h4 class="modal-title" id="myModalLabel">Edit</h4>
      </div>
      <div class="item_errors_div item-updated-errors" >
        <div>
          <% if @item.errors.full_messages.any? %>
          <% @item.errors.full_messages.each do |error_message| %>
          <%= error_message  %> <br />
          <% end %>
          <% end %>
        </div>
      </div>
      <div class="modal-body">
        <div class="field">
          <%= f.label :title%><br>
          <%= f.text_area :title, class: "form-controller item_title"%>
          <%=%>
        </div>
        <div class="field">
          <%= f.label :description%><br>
          <%= f.text_area :description, class: "form-controller item_description"%>
        </div>
        <div class="field">
          <%= f.label :price%><br>
          <%= f.text_area :price, class: "form-controller item_price"%>
        </div>
        <div class="field">
          <%= f.label :image%><br>
          <%= f.file_field :image, class: "form-control item_image"%>
        </div>
        <div class="field">
          <%= f.label :Category%><br>
          <%= f.collection_select :category_ids, Category.all, :id, :name, {include_blank: "select category"},  {:multiple => true}  %>
        </div>
      </div>
      <div class="modal-footer">
        <%= button_to 'Cancel',items_path, action: :index,method: :"get", form_class: 'btn btn-info ml-1',params:{search: "completed"}, :remote=>true %>
        <%= submit_tag "Update", class: "btn btn-primary", params:{search: "uncompleted"}%>
      </div>
    </div>
  </div>
</div>
<%end%>
