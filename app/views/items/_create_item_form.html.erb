<%= form_for(@item, remote: true) do |f|%>

<div class="modal fade" id="mynewitem" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Item</h4>
      </div>
      <div class="item_errors_div" id="item-new-errors">
        <div>
          <% if @item.errors.full_messages.any? %>
          <% @item.errors.full_messages.each do |error_message| %>
          <%= error_message  %> <br />
          <% end %>
          <% end %>
        </div>
      </div>
      <div class="modal-body">
        <div class="field">
          <%= f.label :title%><br>
          <%= f.text_area :title, class: "form-control item_title_create"%>
        </div>
        <div class="field">
          <%= f.label :description%><br>
          <%= f.text_area :description, class: "form-control item_description_create"%>
        </div>
        <div class="field">
          <%= f.label :price%><br>
          <%= f.text_area :price, class: "form-control item_price_create"%>
        </div>
        <div class="field">
          <%= f.label :image%><br>
          <%= f.file_field :image, class: "form-control item_image", id:"my_image_create"%>
        </div>
        <div class="field">
          <%= f.label :Category%><br>
          <%= f.collection_select :category_ids, Category.all, :id, :name, {include_blank: "select category"},  {:multiple => true} %>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal" id="mynewitemclose">Close</button>
        <%= submit_tag "Create", class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</div>
<%end%>
