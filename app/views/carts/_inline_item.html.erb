<div class="col-md-12  blog-main box text-center">
  <div class="row cart">
    <div class="row main align-items-center " style="background-color:white">
      <%item=Item.find_by(id: inline_item.item_id)%>
      <div class="col-2 mr-5"><%= image_tag(item.thumbnail)  if item.image.attached?%>
      </div>
      <div class="col">
        <div class="row ml-5"><%=link_to item.title, item, class:"item_partial"%>
        </div>
      </div>
      <div class="row ml-5">
        <%= render 'carts/decrement', inline_item: inline_item %>
      </div>
      <div id="quantity-div_<%=inline_item.id%>" class="mt-2">
        <div class="ml-3"><%=inline_item.quantity%></div>
      </div>
      <%= render 'carts/increment', inline_item: inline_item %>

      <div class="col mt-1 ml-5">Rs. <%=item.price*inline_item.quantity%>
      </div>
      <div class="ml-5">
        <%= render 'carts/remove', inline_item: inline_item %>
      </div>
    </div>
  </div>
  <br>
</div>
<br>
