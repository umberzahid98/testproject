<div class="col-md-12  blog-main box text-center" >

                    <div class="row cart">
                        <div class="row main align-items-center " style="background-color:white">
                        <%item=Item.find_by(id: inline_item.item_id)%>
                            <div class="col-2"><img class="img-fluid" src="https://i.imgur.com/ba3tvGm.jpg"></div>
                            <div class="col">
                              <div class="row"><%=link_to item.title, item, class:"item_partial"%></div>
                            </div>
                            <div class="row">

                                <%= form_with( model:inline_item , remote: true) do |t| %>
                                    <%= t.hidden_field :quantity, :value=> (inline_item.quantity)-1 %>
                                    <%= t.hidden_field :id, :value=> inline_item.id %>
                                    <%= t.submit "-", class:"btn btn-danger mr-2" %>
                                  <% end %>

                                <div id="quantity-div_<%=inline_item.id%>" class="mt-2"><div><%=inline_item.quantity%></div></div>

                                <%= form_with( model:inline_item , remote: true) do |t| %>
                                  <%= t.hidden_field :quantity, :value=> inline_item.quantity+1 %>
                                  <%= t.hidden_field :id, :value=> inline_item.id %>
                                  <%= t.submit "+" , class:"btn btn-primary ml-2"%>

                                <% end %>

                                <div class="col mt-1">Rs.  <%=item.price*inline_item.quantity%></div>
                        <span style="width:90px"></span>

                                <%= form_with( model:inline_item , remote: true) do |t| %>
                                  <%# <%= t.hidden_field :id, :value=> inline_item.id %>
                                  <input type="hidden" name="_method" value="DELETE">
                                  <%= t.submit "Remove" , class:"btn btn-primary ml-2"%>
                                <% end %>
                        </div>
                    </div>
                    <br>
</div>
