<% inline_item= InlineItem.find_by(id: item)%>
<% current_item = Item.find_by(id: inline_item.item_id)%>

<div class="col-md-12  blog-main box text-center">
  <div class="row cart">
    <div class="row main align-items-center " style="background-color:white">
      <div class="col-2"><%= image_tag(current_item.thumbnail)  if current_item.image.attached?%></div>
      <div class="col ml-5">
        <div class="row"><%=link_to current_item.title, current_item,class:"item_partial" %></div>
      </div>
      <div class="row">
        <div><%="Quantity:  "%></div>
        <span class="mr-1"></span>
        <div><%=inline_item.quantity%></div>
        <span class="mr-4"></span>
        <div class="col">Rs. <%=inline_item.price*inline_item.quantity%></div>
        <span style="width:90px"></span>
      </div>
    </div>
  </div>
  <br>
</div>
